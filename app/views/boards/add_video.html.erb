<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            Add Video to your Board
          </div>
          <div class="panel-body">
            <%= form_tag add_board_path do %>
              <div class="form-group">
                <%= select_tag "video", options_from_collection_for_select(@videos, "id", "title"), class: "form-control" %>
              </div>

              <div class="form-group">
                <%= submit_tag "Save", class: "btn btn-md btn-info" %>
              </div>
            <% end %>
          </div>
          <div class="panel-footer">
            <%= link_to 'Back', videos_path %> |
            <%= link_to 'Video not listed?', new_video_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

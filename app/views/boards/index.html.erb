<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col-md-8">
      <h1>Your Boards</h1>
    </div>
    <div class="col-md-4 text-right">
      <%= link_to 'New Board', new_board_path, class: 'btn btn-md btn-warning' %>
    </div>

    <div class="col-md-12">
      <% @boards.each do |board| %>
        <div class="col-md-2">
          <div class="panel panel-default">
            <div class="panel-heading">
              <%= link_to board.name, board %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>


